<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sadnesslearn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SadnessLearn.Pink">
        <activity
            android:name=".activities.Profile"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainPage"/>
        <activity
            android:name=".activities.Settings"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainPage" />
        <activity
            android:name=".activities.ComicsActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.MainPage" />
        <activity
            android:name=".activities.SolveTask"
            android:exported="true"
            android:parentActivityName=".activities.TaskList"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.TaskTypeChoose"
            android:exported="true"
            android:parentActivityName=".activities.MainPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TaskList"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.TaskTypeChoose" />
        <activity
            android:name=".activities.CodeRunResult"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.Sandbox" />
        <activity
            android:name=".activities.Sandbox"
            android:exported="true"
            android:parentActivityName=".activities.MainPage" />
        <activity
            android:name=".activities.ResetPassword"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.SignIn" />
        <activity
            android:name=".activities.SignIn"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.Authentification" />
        <activity
            android:name=".activities.MainPage"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Registration"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.Authentification" />
        <activity
            android:name=".activities.Authentification"
            android:theme="@style/splashScreenTheme"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>