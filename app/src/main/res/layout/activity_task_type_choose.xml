<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlb_choose_task_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="50dp"
        app:title="@string/task_types"
        />

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/RelativeLayoutContent"
        tools:context=".activities.TaskTypeChoose">

        <GridLayout
            style="@style/GridLayButtons"
            android:columnCount="1">

            <LinearLayout
                android:id="@+id/lin_lay_btn_choose_task_code"
                style="@style/LinLayMenuButton">

                <ImageView
                    style="@style/ImageViewMenuButton"
                    android:src="@drawable/ic_code_task" />

                <TextView
                    style="@style/TextViewMenuButton"
                    android:text="@string/code_task" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_lay_btn_choose_task_block"
                style="@style/LinLayMenuButton"
                android:layout_marginBottom="0dp">

                <ImageView
                    style="@style/ImageViewMenuButton"
                    android:src="@drawable/ic_block_task" />

                <TextView
                    style="@style/TextViewMenuButton"
                    android:text="@string/block_task" />
            </LinearLayout>
        </GridLayout>

    </RelativeLayout>
</LinearLayout>