<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--> Тулбар <!-->
    <style name="ToolbarSadness">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:background">@drawable/toolbar_border</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="fontFamily">@font/comicsansms</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--> Слой с контентом <!-->
    <style name="RelativeLayoutContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/darkGrey</item>
    </style>

    <!--> Кнопки при авторизации <!-->
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/base_button</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily">@font/comicsansms</item>
        <item name="android:gravity">center</item>
    </style>

    <!--> Кнопки меню, состоящие из картинки и текста <!-->
    <style name="LinLayMenuButton">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/custom_button_menu</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ImageViewMenuButton">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_weight">1</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="TextViewMenuButton">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/comicsansms</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">@color/mainCode</item>
    </style>

    <!--> Таблица для кастомных кнопочек) <!-->
    <style name="GridLayButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--> Круглая форма для картинки <!-->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--> Кнопки настроек <!-->
    <style name="LinLaySettingsButton">
        <item name="android:background">@drawable/custom_button_settings</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewSettingsButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/comicsansms</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ImageViewSettingsButton">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--> Стрелочки для переключения изображений <!-->
    <style name="ButtonImageSwitcher">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@null</item>
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>